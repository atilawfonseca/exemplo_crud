<%- include('partials/header')  %>
    <main class="container pt-5">
        <div class="row mt-5">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type  %>"
                        role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                    </div>
                    <% } %>
                <div class="table-responsive">
                    <% if(users != '') { %>
                        <table class="table table-striped text-center">
                            <thead>
                                <tr class="table-dark">
                                    <th>ID</th>
                                    <th>Imagem</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Telefone</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((linha, index) => {%>
                                    <tr class="align-middle">
                                        <td> <%= index+1 %> </td>
                                        <td><img src="<%= linha.image %>" width="50" class="img-thumbnail" alt=""></td>
                                        <td><%= linha.name %></td>
                                        <td><%= linha.email %></td>
                                        <td><%= linha.telefone %></td>
                                        <td>
                                            <a href="/edit/<%= linha._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/delete/<%= linha._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">Não foi encontrado usuários!</h1>
                        <% } %>
                </div>
            </div>
        </div>

    </main>

    <%- include('partials/footer')  %>